{
  "name": "HelloWorld",
  "fully_qualified_name": "SampleApi.HelloWorld@0.1.0",
  "description": "A hello world tool for the Sample API",
  "toolkit": {
    "name": "SampleApi",
    "description": "A sample API wrapper toolkit",
    "version": "0.1.0"
  },
  "input": {
    "parameters": [
      {
        "name": "salutation",
        "description": "The salutation to say hello to",
        "value_schema": { "val_type": "string" },
        "required": true,
        "inferrable": true,
        "http_endpoint_parameter_name": "salute"
      },
      {
        "name": "name",
        "description": "The name to say hello to",
        "value_schema": { "val_type": "string" },
        "required": true,
        "inferrable": true,
        "http_endpoint_parameter_name": "sample_name"
      }
    ]
  },
  "output": {
    "description": "The greeting",
    "available_modes": ["value", "error", "null"],
    "value_schema": {
      "val_type": "json",
      "properties": {
        "message": { "val_type": "string", "description": "A greeting message to {name}" }
      },
      "description": "The greeting response"
    }
  },
  "requirements": {
    "authorization": null,
    "secrets": [{ "key": "sample_api_key" }],
    "metadata": null
  },
  "deprecation_message": null,
  "http_endpoint": {
    "url": "http://localhost:9123/hello/{salute}",
    "http_method": "POST",
    "headers": {
      "Authorization": "Basic {sample_api_key}",
      "Content-Type": "application/json"
    },
    "parameters": [
      {
        "name": "sample_api_key",
        "description": "The Sample API key to use for authentication",
        "value_schema": { "val_type": "string" },
        "accepted_as": "header",
        "required": true,
        "deprecated": false,
        "documentation_urls": []
      },
      {
        "name": "salute",
        "description": "The salutation to say hello to",
        "value_schema": { "val_type": "string" },
        "accepted_as": "path",
        "required": true,
        "deprecated": false,
        "documentation_urls": []
      },
      {
        "name": "sample_name",
        "description": "The name to say hello to",
        "value_schema": { "val_type": "string" },
        "accepted_as": "body",
        "required": true,
        "deprecated": false,
        "documentation_urls": []
      }
    ],
    "documentation_urls": ["https://www.sampleapi.com/hello"]
  }
}
